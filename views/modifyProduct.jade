extends layout

block content
  h1= title
  body
    form(action="/products" method="POST")
      div(class="form-group")
        label(for="nameProduct") Nombre del producto 
        input(type="text" name="nameProduct" placeholder="Nombre del producto a modificar" id="nameProduct" class="form-control")
      div(class="form-group")
        label(for="descriptionProduct") Descripcion del producto 
        input(type="text" name="descriptionProduct" placeholder="Descripcion del producto  a modificar" id="descriptionProduct" class="form-control")
      div(class="form-group")
        label(for="costProduct") Precio del producto 
        input(type="text" name="costProduct" placeholder="Precio del producto a modificar" id="costProduct" class="form-control")
      div
        input(type="submit" value="Modificar" class="btn btn-info")